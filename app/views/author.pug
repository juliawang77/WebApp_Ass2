extends layout

block scripts
    script(src='/js/author.js')
    link(rel='stylesheet', href='/stylesheets/author.css')

block content
    .main.container.text-center
        .col-md-8.mx-auto.text-center
            .input-group.mb-3
                input.authorInput.form-control(type='text', placeholder="Author username", aria-label="Author username", aria-describedby='basic-addon2')
                .input-group-append
                    button#searchBtn.btn.btn-outline-secondary(type='button') Search

            .card
                .card-body
                    .table-wrapper-2
                        // Table
                        table#titleTable
                            thead
                                tr.header.bg-primary.text-light
                                    th(style='width:60%;') Title
                                    th(style='width:40%;') Revisions
                            tbody#titleTableBody

            .card.my-5
                .card-body
                    .table-wrapper-2
                        // Table
                        table#timestampTable
                            thead
                                tr.header.bg-primary.text-light

                                    th(style='width:40%;') Timestamp
                            tbody#timestampTableBody

            #articleDiv.container.col-8.border.border-warning.my-4